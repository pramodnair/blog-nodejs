<%- include("partials/header") %>
  <div class="row align-items-center px-2 py-3">
    <div class="col welcome-text">
      <h2>Welcome To Daily Blogs </h1>
    </div>
    <div class="col">
      <a class="btn btn-outline-dark btn-sm float-end" href="/compose" role="button">Compose</a>
    </div>
  </div>
  <div class="d-flex justify-content-around flex-wrap">
    <% posts.map( post=> { %>
      <div class="card bg-light text-dark w-25 my-3 mx-2 shadow">
        <div class="card-body">
          <h4 class="card-title">
            <%= post.title %>
              <button class="btn float-end post-del p-0" type="submit" name="title" value="<%= post._id %>">
                <% if(post.title !=="Start Blogging" ) { %>
                  <span class="badge close-bg pb-2 w-auto h-auto">x</span>
                  <% } %>
              </button>
              
              </h3>
              <p class="card-text">
                <% if(post.content.length> 200) { %>
                  <%= post.content.slice(0,200) %>
                    ... <a class="read-more" id="<%= post._id %>">Read More</a>
                    <% } else { %>
                      <%= post.content %>
                        <% } %>
             </p>
              <button class="btn float-end close-bg post-update p-0" type="submit" name="title" value="<%= post._id %>">
                <% if(post.title !=="Start Blogging" ) { %>
                  <span class="badge pb-2 w-auto h-auto">Edit</span>
                  <% } %>
              </button>
            
        </div>
      </div>
      <% }) %>
  </div>
  <%- include("partials/footer") %>