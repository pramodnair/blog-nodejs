<%- include("partials/header") %>
  <div class="row align-items-center">
    <div class="col p-5">
      <h1>Welcome To Daily Blogs </h1>
    </div>
    <div class="col p-5">
      <a class="btn btn-primary btn-sm float-end" href="/compose" role="button">Compose</a>
    </div>
  </div>
  <div class="d-flex justify-content-around flex-wrap">
    <% posts.map( post=> { %>
      <div class="card bg-light text-dark w-25 m-3">
        <div class="card-body">
          <h3 class="card-title">
            <%= post.title %>
          </h3>
          <p class="card-text">
            <% if(post.content.length> 300) {%>
              <%= post.content.slice(0,300) %>
                ... <a href="/posts/<%=post.title%>">Read More</a>
                <% } %>
          </p>
        </div>
      </div>
      <% }) %>
  </div>
  <%- include("partials/footer") %>